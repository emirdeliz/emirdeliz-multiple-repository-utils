{
	"name": "emirdeliz-multiple-repo",
	"displayName": "emirdeliz-multiple-repo",
	"description": "Multiple repository utils",
	"version": "0.0.1",
	"type": "module",
	"repository": "https://github.com/emirdeliz/emirdeliz-multiple-repository-utils",
	"engines": {
		"vscode": "^1.71.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:emirdeliz-multiple-repo.pull-workspace",
		"onCommand:emirdeliz-multiple-repo.merge-workspace"
	],
	"license": "MIT",
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"id": "emirdeliz-multiple-repo",
				"title": "Multi repo configuration",
				"properties": {
					"ignoreFolders": {
						"type": "array",
						"default": [],
						"markdownDescription": "Specifies folders to ignore when extension makes some action",
						"scope": "window",
						"order": 10
					}
				}
			}
		],
		"commands": [
			{
				"command": "emirdeliz-multiple-repo.pull-workspace",
				"title": "Pull Workspace",
				"description": "Run git pull for each project on the root of the workspace."
			},
			{
				"command": "emirdeliz-multiple-repo.merge-workspace",
				"title": "Merge Workspace",
				"description": "Run git merge for each project on the root of the workspace."
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsRoot && config.git.enabled",
					"command": "emirdeliz-multiple-repo.pull-workspace",
					"group": "emirdeliz-multiple-repo@4"
				},
				{
					"when": "explorerResourceIsRoot && config.git.enabled",
					"command": "emirdeliz-multiple-repo.merge-workspace",
					"group": "emirdeliz-multiple-repo@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build:dist",
		"build:dist": "swc ./src --quiet --out-dir dist",
		"build:dist:watch": "swc ./src --watch --quiet --out-dir dist",
		"build:test": "swc ./src/test --out-dir dist",
		"test": "jest --clearCache && jest ./src/test/extension.test.ts",
		"test:watch": "jest --clearCache && jest --watch ./src/test/extension.test.ts",
		"symbol:link:modules:pre": "rm -rf node_modules/emirdeliz-vs-extension-utils",
		"symbol:link:modules": "npm run symbol:link:modules:pre && ln -s ../../emirdeliz-vs-extension-utils node_modules/emirdeliz-vs-extension-utils",
		"lint:check": "eslint src --ext .ts --fix",
		"clear:dependencies": "rm -rf node_modules && rm -rf yarn.lock",
		"install:dev": "yarn clear:dependencies && yarn install && yarn symbol:link:modules"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.14",
		"@swc/helpers": "^0.4.12",
		"@swc/jest": "^0.2.23",
		"@types/jest": "^29.2.2",
		"@types/node": "^18.11.9",
		"@types/vscode": "^1.71.0",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"eslint": "^8.20.0",
		"jest": "^29.3.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"emirdeliz-vs-extension-utils": "https://github.com/emirdeliz/emirdeliz-vs-extension-utils.git"
	}
}